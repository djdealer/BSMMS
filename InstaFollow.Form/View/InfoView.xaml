<view:BaseWindow x:Class="InstaFollow.Form.View.InfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:InstaFollow.Core.UI.View;assembly=InstaFollow.Core"
        Title="InfoView" Height="400" Width="300"
        ResizeMode="CanMinimize">
    <DockPanel LastChildFill="True">
        <Image Source="{Binding ImageSource}" DockPanel.Dock="Top" Height="200" Width="Auto"></Image>
        <Label Content="{Binding InfoText}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" DockPanel.Dock="Bottom"></Label>
    </DockPanel>
</view:BaseWindow>

